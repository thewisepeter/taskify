<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Taskify</title>
    <link href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined" rel="stylesheet" />
    <link 
        rel="stylesheet"
        href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css"
        integrity="sha512-z3gLpd7yknf1YoNbCzqRKc4qyor8gaKU1qmn+CShxbuBusANI9QpRohGBreCFkKxLhei6S9CQXFEbbKuqLg0DA=="
        crossorigin="anonymous" referrerpolicy="no-referrer"
    />
    <link rel="stylesheet" href="/css/styles_2.css" />
</head>
<body>
    <!-- sidebar starts -->
    <div class="sidebar">
        <a href="/">
            <i class="logo">taskify</i>
        </a>
        <div class="sidebarOption">
            <a href="/">
                <span class="material-symbols-outlined"> home </span>
                <h2>Home</h2>
            </a>
        </div>

        <div class="sidebarOption">
            <a href="/projects">
                <span class="material-symbols-outlined"> tactic </span>
                <h2>Projects</h2>
            </a>
        </div>

        <div class="sidebarOption">
            <a href="/tasks">
                <span class="material-symbols-outlined"> checklist </span>
                <h2>Tasks</h2>
            </a>
        </div>

        <div class="sidebarOption">
            <a href="/profile">
                <span class="material-symbols-outlined"> person </span>
                <h2>Profile</h2>
            </a>
        </div>

        <div>
            <a href="/logout">
                <button class="sidebar__tweet">Log Out</button>
            </a>
        </div>

    </div>
    <!-- sidebar ends -->

    <!-- feed starts-->
    <div class="feed">
        <div class="feed__header">
            <h2>Project Details</h2>
        </div>

        <!--Project details form starts-->
        <div class="post">
            <div class="pt__display">
                <h5 class="pt__name">Project: <%= project.name %></h5>
                <h5 class="pt__detail"><%= project.description %></h5>

                <!-- Check if the project has associated tasks -->
                <% if (project.Tasks && project.Tasks.length > 0) { %>
                    
                    <ul>
                        <% project.Tasks.forEach(task => { %>
                            <li>
                                <h5 class="pt__detail">Tasks:<%= task.title %></h5>
                                <h5 class="pt__detail">Description: <%= task.description %></h5>
                                <h5 class="pt__detail">Assignee: <%= task.assignee %></h5>
                                <h5 class="pt__detail">Due Date: <%= task.dueDate %></h5>
                            </li>
                        <% }); %>
                    </ul>
                <% } else { %>
                    <p>No tasks associated with this project.</p>
                <% } %>
            </div>
        </div>
        <!--Project details form ends-->
    </div>
            
    </div>
    <!-- feed ends-->

    <!-- widgets starts -->
    <div class="widgets">
        <div class="widgets__widgetContainer">
            <h2>What will you be accomplishing today?</h2>
    </div>
      <!-- widgets ends -->

</body>
</html>
